@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Quicksand')
global-reset()

main-color = #fa5b4d
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 80px 10px
  color #fff
  font-size 35px
  text-align center
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.navbar
  border 1px solid main-color
  float left
  width 200px
  margin 50px auto auto 50px
  h1
    font-family 'Quicksand'
    margin 13px 10px 4px
    padding-bottom 10px
    border-bottom 1px dotted main-color
    border-radius 2px 2px 0px 0px
    margin-bottom 10px
  ul
    font-size 13px
    padding 0px 10px
    margin-bottom 10px  

.container
  margin-top 50px 
  margin-left 100px 
  overflow hidden

.main-content
  float left
  width 500px
  margin-left 100px 

  p
    margin-bottom 20px

.sidebar
  float right
  width 200px
  margin-right 50px

  .widget
    border-radius 10px
    border 1px solid main-color
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted main-color
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8
  
ul
  line-height 2

footer
  width 500px
  margin 150px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 10px
  text-align center
